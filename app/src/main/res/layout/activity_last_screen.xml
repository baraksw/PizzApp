<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LastScreen">

    <ImageView
        android:id="@+id/thanks_imageView"
        android:layout_width="@dimen/thanksText_size"
        android:layout_height="@dimen/thanksText_size"
        android:layout_marginTop="@dimen/upper_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/order_ready" />

    <ImageView
        android:id="@+id/V_Sign_imageView"
        android:layout_width="@dimen/next_and_previous_button_size"
        android:layout_height="@dimen/next_and_previous_button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thanks_imageView"
        app:srcCompat="@drawable/aprrove_payment" />

    <ImageView
        android:id="@+id/motorcycle_imageView"
        android:layout_width="@dimen/motorcycle_size"
        android:layout_height="@dimen/motorcycle_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/motor" />
</androidx.constraintlayout.widget.ConstraintLayout>