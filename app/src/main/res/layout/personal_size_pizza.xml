<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:cardBackgroundColor="#00FFFFFF"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/personal_size_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/personal_size_description"
                android:onClick="personal_size"
                android:src="@drawable/pizza_size_small" />

            <TextView
                android:id="@+id/personal_pizza_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="40 שקלים"
                android:textSize="24sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>