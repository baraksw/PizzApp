<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">

        <activity android:name=".HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_drinks"></activity>
        <activity android:name=".Credit"
            android:label = "Credit"
            android:parentActivityName=".CreditOrCash">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pizzapp.CreditOrCash" />
        </activity>
        <activity android:name=".CreditOrCash"
            android:label = "Credit Or Cash">
    </application>
</manifest>